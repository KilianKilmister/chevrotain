{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib/src",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "test", // FIXME: remove again
    "test_integration"
  ]
}
